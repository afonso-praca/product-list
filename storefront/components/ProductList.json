{
  "resourceBindings": [
    {
      "locator": "search@vtex.storefront-sdk",
      "relativePath": "/{{ account }}/products",
      "queryParams": {
        "query": "{{ route.searchTerm }}",
        "category": "{{ route.splat }}",
        "brands": "{{ query.brands }}",
        "sort": "{{ query.sort }}",
        "page": "{{ query.page }}",
        "pageSize": "{{ query.pageSize }}"
      },
      "bindTo": "products@vtex"
    }
  ],
  "assets": [
    "common.js",
    "ProductList.js"
  ]
}
